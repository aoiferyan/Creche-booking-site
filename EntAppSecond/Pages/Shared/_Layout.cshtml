<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntAppSecond</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header  style="background-color:aquamarine; width: 1150px; height: 100px; margin-left:225px;">
        <h1 class="col-sm-12" id="mainText" style="font-family: 'Staatliches', cursive;  text-align:center;">The Sligo Creche<i class="fas fa-plane-departure"></i></h1>
        <br />
    </header>
    <div class="container">

        <ul class="nav nav-tabs" role="tablist">

            <li><a asp-page="/Index">Home</a></li>
            <li><a asp-page="/Students/Create">Application Form</a></li>
            <li><a asp-page="/Students/ListStudents">List of Students</a></li>

        </ul>
    </div>
    <!--start of carousel-->
    <div class="container" style="margin-top:5px;">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="height:300px">
                <div class="item active">
                    <img src="~/images/cel-lisboa-73969-unsplash.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/images/luke-marshall-273226-unsplash.jpg" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/images/salvatore-ventura-608630-unsplash.jpg" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- End of carousel -->

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2019 - Sigo Creche Services</p>
            </footer>
        </div>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
